rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    // Profil resimleri için kurallar
    match /Profile_Images/{userId}/{allPaths=**} {
      // Sadece kendi kullanıcısı resmini yükleyebilir/güncelleyebilir/silebilir
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
    
    // Video dosyaları için kurallar
    match /videos/{allPaths=**} {
      // Kimlik doğrulaması yapılmış kullanıcılar video okuyabilir
      allow read: if request.auth != null;
      // Kimlik doğrulaması yapılmış kullanıcılar video yükleyebilir
      allow write: if request.auth != null;
    }
    
    // Thumbnail dosyaları için kurallar
    match /thumbnails/{allPaths=**} {
      // Kimlik doğrulaması yapılmış kullanıcılar thumbnail okuyabilir
      allow read: if request.auth != null;
      // Kimlik doğrulaması yapılmış kullanıcılar thumbnail yükleyebilir
      allow write: if request.auth != null;
    }
    
    // Diğer dosyalar için genel kurallar
    match /{allPaths=**} {
      // Kimlik doğrulaması yapılmış kullanıcılar dosya okuyabilir
      allow read: if request.auth != null;
      // Kimlik doğrulaması yapılmış kullanıcılar dosya yükleyebilir
      allow write: if request.auth != null;
    }
  }
}
